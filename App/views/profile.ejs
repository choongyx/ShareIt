    <section id="content">
      <div class="container">

        <h1><%= title%></h1>

        <div class="forms" style="width:60%">
          <table class="table" style="float: center">
            <tr>
              <th scope='row'> Userid: </th>
              <td><%= data.rows[0].userid%></td>
            </tr>
            <tr>
              <th scope='row'> Email: </th>
              <td><%= data.rows[0].username%></td>
            </tr>
            <tr>
              <th scope='row'> Address: </th>
              <td><%= data.rows[0].address%></td>
            </tr>

          </table>
        </div>

        <div class="forms">
          <h4>Change Address</h4>

          <div class = "error_box">
            <% if (messages.info1){ %>
            <ul>
              <% for(var i=0; i< messages.info1.length; i++) { %>
              <li> <%= messages.info1[i].msg %> </li>
              <% } %>
            </ul>
            <% } %>
          </div>

          <form id="CategoryC_form" action="profile" role="form" method="post">
            <div class="form-group">
              <label for="name">New Address</label>
              <select class="form-control" id="newAddress" name="newAddress" placeholder="New Address">
                <option value="Ang Mo Kio">Ang Mo Kio</option>
                <option value="Bedok">Bedok</option>
                <option value="Bishan">Bishan</option>
                <option value="Boon Lay">Boon Lay</option>
                <option value="Bukit Batok">Bukit Batok</option>
                <option value="Choa Chu Kang">Choa Chu Kang</option>
                <option value="City Hall">City Hall</option>
                <option value="Clementi">Clementi</option>
                <option value="Harbourfront">Harbourfront</option>
                <option value="Hougang">Hougang</option>
                <option value="Jurong East">Jurong East</option>
                <option value="Pasir Ris">Pasir Ris</option>
                <option value="Queenstown">Queenstown</option>
                <option value="Tampines">Tampines</option>
                <option value="Woodlands">Woodlands</option>
                <option value="Yishun">Yishun</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
        <div class="forms">

          <div class="forms">
            <h4>Change Password</h4>

            <% if (messages.info){ %>
            <div class = "error_box">
              <% if (messages.info){ %>
              <ul>
                <% for(var i=0; i< messages.info.length; i++) { %>
                <li> <%= messages.info[i].msg %> </li>
                <% } %>
              </ul>
              <% } %>
            </div>
            <% } %>

            <form id="CategoryD_form" action="profile" role="form" method="post">
              <div class="form-group">
                <label for="oldPassword">Old Password</label>
                <input class="form-control" id="oldPassword" name="oldPassword" placeholder="Old Password">
              </div>
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input class="form-control" id="newPassword" name="newPassword" placeholder="New Password">
                </div
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">Update</button>
                </form>
              </div>
              <h4>Delete Account</h4>

              <% if (messages.info2){ %>
              <div class = "error_box">
                <% if (messages.info2){ %>
                <ul>
                  <% for(var i=0; i< messages.info2.length; i++) { %>
                  <li> <%= messages.info2[i].msg %> </li>
                  <% } %>
                </ul>
                <% } %>
              </div>
              <% } %>

              <form id="CategoryD_form" action="profile" role="form" method="post">
                <div class="form-group">
                  <label for="name">Password</label>
                  <input class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary" aria-describedby="deleteHelp">Delete</button>
                  <small id="deleteHelp" class="form-text text-muted">Warning: All account details will be deleted.</small>
                </form>
              </div>
