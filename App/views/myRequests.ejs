        <div class="form-group" style="width:80%">
          <!-- <div class="forms" style="float: left; width: 45%"> -->
            <h4>My Requests</h4>
            <table class="table" style="float: left">
              <thead>
                <tr>
                  <th scope="col">Request Id</th>
                  <th scope="col">Request Name</th>
                  <th scope="col">Description</th>
                  <th scope="col">Start Date</th>
                  <th scope="col">End Date</th>
                  <th scope="col">Contact Number</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<data.length; i++) { %>
                <tr>
                  <td><%= data[i].requestid%></td>
                  <td><%= data[i].productname%></td>
                  <td><%= data[i].description%></td>
                  <td><%= data[i].startdate.toLocaleDateString()%></td>
                  <td><%= data[i].enddate.toLocaleDateString()%></td>
                  <td><%= data[i].contactnumber%></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <div class="form-group" style="width:80%">
            <!-- <div class="forms" style="width:35%"> -->
              <h4>Create a Request</h4>
              <form id="RequestR_form" action="myRequests" role="form" method="post">
                <div>
                  <label for="name">Request Name</label>
                  <input class="form-control" id="name" name="name" placeholder="Request Name">
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <input class="form-control" id="description" name="description" placeholder="Request Description">
                </div>
                <div class="form-group">
                  <label for="startdate">Start Date</label>
                  <input class="form-control" type="date" id="startdate" name="startdate" placeholder="Start Date" style = "font-size:16px; padding-left: 12px; height:36px">
                </div>
                <div class="form-group">
                  <label for="enddate">End Date</label>
                  <input class="form-control" type="date" id="enddate" name="enddate" placeholder="End Date" style = "font-size:16px; padding-left: 12px; height:36px">
                </div>
                <div class="form-group">
                  <label for="contactnumber">Contact Number</label>
                  <input class="form-control" id="contactnumber" name="contactnumber" placeholder="Contact Number">
                </div>
                <button type="submit" class="btn btn-primary" onclick="createdRequest()">Submit</button>
              </form>
            </div>
            <div class="form-group" style="width:80%">
              <!-- <div class="forms" style="float: left; width: 35%"> -->
                <h4>Delete a Request</h4>
                <form id="RequestD_form" action="myRequests" role="form" method="post">
                  <div class="form-group">
                    <label for="name">Delete Request Id</label>
                    <input class="form-control" type="number" id="idDelete" name="idDelete" placeholder="Request Id" style = "font-size:16px; padding-left: 12px; height:36px">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </div>
